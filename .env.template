# ContentFlow Environment Variables Template
# Copy this file to .env and fill in the values

# ==============================================
# Azure Configuration (automatically set by azd)
# ==============================================
AZURE_TENANT_ID=
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_LOCATION=eastus2

# ==============================================
# Azure Resources (set during azd provision)
# ==============================================
COSMOS_DB_ENDPOINT=
COSMOS_DB_NAME=contentflow
STORAGE_ACCOUNT_NAME=
STORAGE_ACCOUNT_WORKER_QUEUE_URL=
STORAGE_WORKER_QUEUE_NAME=contentflow-execution-requests
BLOB_STORAGE_CONTAINER_NAME=content
APP_CONFIG_ENDPOINT=
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Managed Identity
AZURE_CLIENT_ID=
MANAGED_IDENTITY_CLIENT_ID=

# ==============================================
# API Configuration
# ==============================================
API_SERVER_HOST=0.0.0.0
API_SERVER_PORT=8090
DEBUG=false
LOG_LEVEL=INFO

# ==============================================
# Worker Configuration
# ==============================================
NUM_PROCESSING_WORKERS=4
NUM_SOURCE_WORKERS=2
WORKER_NAME=contentflow-worker
LOG_LEVEL=INFO

# Queue Settings
QUEUE_POLL_INTERVAL_SECONDS=5
QUEUE_VISIBILITY_TIMEOUT_SECONDS=300
QUEUE_MAX_MESSAGES=32
DEFAULT_POLLING_INTERVAL_SECONDS=300
SCHEDULER_SLEEP_INTERVAL_SECONDS=5
LOCK_TTL_SECONDS=300

# Processing Settings
MAX_TASK_RETRIES=3
TASK_TIMEOUT_SECONDS=600

# ==============================================
# Web Configuration
# ==============================================
VITE_API_BASE_URL=

# ==============================================
# Optional: AI Foundry (if using AI features)
# ==============================================
AI_PROJECT_NAME=
AI_SERVICES_NAME=

# ==============================================
# Development Only
# ==============================================
# Uncomment for local development
# AZURE_APP_CONFIG_ENDPOINT=https://your-appconfig.azconfig.io
# DEBUG=true
